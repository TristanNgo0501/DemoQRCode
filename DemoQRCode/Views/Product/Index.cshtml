@model IEnumerable<DemoQRCode.Models.Product>
@{
    ViewData["Title"] = "List of Product";
}

<h1>Product Lists</h1>
<a class="btn btn-outline-secondary" asp-action="Create" asp-controller="Product">Create</a>
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>QR Code</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>
                <img src="@Url.Action("GetQrCode","Product", new {id=item.Id})" width="100" alt="QR Code"/>
            </td>
            <td>
                <a class="btn btn-outline-info" asp-route-id="@item.Id" asp-action="Detail">Detail</a>
                <a class="btn btn-outline-primary" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                <a class="btn btn-outline-dark" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
            </td>
        </tr>
    }
</table>

